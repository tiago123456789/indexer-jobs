<% include ../partials/header %>
<body>
    <div class="container">
        <h1 class="text-center">Register account</h1>
        <div class="row">
            <form class="col-md-6" style="margin: 0px auto;" action="/user/register" method="POST">
                <div class="form-group">
                    <label for="">Username:</label>
                    <input type="text" name="username" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="">Cellphone:</label>
                    <input type="tel" name="cellphone" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="">Email:</label>
                    <input type="email" name="email" class="form-control" />
                </div>


                <div class="form-group">
                    <label for="">Password:</label>
                    <input type="password" name="password" class="form-control" />
                </div>

                
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary" value="register"/>
                </div>
            </form>
        </div>
    </div>
<% include ../partials/footer %>
